<% drafts.each do |draft| %>
  <div>
    <h3>
      <%= draft.title %>
    </h3>
    </p>
      <%= draft.content  %>
    <p>
    <% if draft.file.attached? %>
      <% if draft.file.attachment.image? %>
        <strong>Attached: </strong><%= draft.file.filename %><br>
        <%= image_tag(draft.file, size: "200") %>
      <% else %>
        <strong>Attached: </strong><%= link_to draft.file.filename, url_for(draft.file) %>
      <% end %>
    <% end %><br>
    <% draft.topic_names.each do |topic_name|  %>
    <% #FIXME_AB: each topic should be a link, which should show questions of this topic -%>
      <span class="badge badge-primary"><%= topic_name %></span>
    <% end %><br>
    <small>Submitted <%= time_ago_in_words(draft.created_at) %> ago</small><br>

    <%= link_to  "Post", publish_question_path(draft), class: "text-success" %>
    <%= link_to  "Edit", edit_question_path(draft), class: "text-danger" %>
  </div>
  <hr class="my-4">
<% end %>
