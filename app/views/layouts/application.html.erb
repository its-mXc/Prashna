<!DOCTYPE html>
<html>
  <head>
    <title>Prashna</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="logo">
      <%= link_to  "Prashna", root_path, class: "navbar-brand" %>
    </div>

    <div class="collapse navbar-collapse" id="navbarColor02">
      <ul class="navbar-nav mr-auto">
          <% if logged_in? %>
            <li class="nav-item active"><%= link_to 'Logout', logout_path, method: :delete, class: "nav-link" %></li>
            <a class="nav-link" href="/signup"><img id="notification-bell" width="30" height="30" src="https://www.materialui.co/materialIcons/social/notifications_white_192x192.png"><span class="sr-only">(current)</span></a>

          <% else %>
            <li class="nav-item active"><%= link_to 'Login', login_path, class: "nav-link" %></li>
            <li class="nav-item active"><%= link_to 'Signup', signup_path, class: "nav-link" %></li>
          <% end%>
      </ul>
    </div>
  </nav>
    <div class = 'container' style="margin-top:20px;">
      <div class="row">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
