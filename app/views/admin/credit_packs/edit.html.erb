<div class="display-container">
  <%= render 'shared/errors', object: @credit_pack %>
    <div class="w-25">
        <%= form_with model: @credit_pack, local: true, url: admin_credit_pack_path do |form| %>
            <div class="form-group">
                <strong>Name:</strong>
                <%= form.text_field :name, placeholder: "Name", class: "form-control" %>
            </div>
            <div class="form-group">
                <strong>Credits:</strong>
                <%= form.text_field :credits, placeholder: "Credits",  class: "form-control"  %>
            </div>
            <div class="form-group">
                <strong>Price:</strong>
                <%= form.text_field :price, placeholder: "Price",  class: "form-control"  %>
            </div>
            <strong> Disabled : </strong><%= form.check_box :disabled %>
            <div class="form-group">
                <strong>Cover image:</strong>
                <%= form.file_field :cover_image,  class: "form-control-file" %>
            </div>
            <%= form.submit 'Update Pack', class: 'btn btn-danger'%>
        <% end %>
    </div>
</div>