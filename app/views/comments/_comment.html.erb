  <li id="comment-<%= comment.id %>">
    <% if current_user == comment.user %>
    <strong><%= link_to "#{comment.user.name}ðŸŽ™", questions_user_path(comment.user), class: "text-danger" %></strong><br>
    <% else %>
    <strong><%= link_to comment.user.name, questions_user_path(comment.user), class: "text-success" %></strong><br>
    <% end %>
    <%= comment.body %> -
    <small>Submitted <%= time_ago_in_words(comment.created_at) %> ago</small>
    <% if current_user != comment.user %>
      <%= form_for @question , url: reaction_comment_path(comment) ,local: true, method: :get do |f| %>
        <%= f.submit :upvote, class: "btn  upvote", title: comment.reactions.upvotes.count%>
        <%= comment.reaction_count %>
        <%= f.submit :downvote, class: "btn  downvote", title: comment.reactions.downvotes.count%>
      <% end %>
    <% else %>
     <p><strong>Upvotes:</strong><%= comment.reaction_count %></p>
    <% end %>
    <% if params[:parent_comment_id].to_i == comment.id %>
    <div class="reply-btn nested pre-filled text-success">Reply</div>
    <div class="reply-form">
    <%= form_for [comment, Comment.new] do |f| %>
      <div class="form-group">
        <%= f.text_area :body, placeholder: "Add a Reply", class: "form-control reply-comment-field", value: params[:comment_body] %>
      </div>
      <%= f.submit "Reply", class: "btn btn-danger"  %>
    <% end %>
    </div>
    <% else %>
      <div class="reply-btn nested text-success">Reply</div>
      <div class="reply-form">
      <%= form_for [comment, Comment.new] do |f| %>
        <div class="form-group">
          <%= f.text_area :body, placeholder: "Add a Reply", class: "form-control reply-comment-field" %>
        </div>
        <%= f.submit "Reply", class: "btn btn-danger"  %>
      <% end %>
      </div>
    <% end %>
    <ul>
        <%= render comment.comments %>
    </ul>


  </li>
